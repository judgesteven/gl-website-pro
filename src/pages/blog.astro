---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getAllPosts } from '../data/blogPosts';
import { EXTERNAL_URLS } from '../lib/external';

const POSTS_PER_PAGE = 6;
const allPosts = getAllPosts();
const currentPage: number = 1;
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
const endIndex = startIndex + POSTS_PER_PAGE;
const blogPosts = allPosts.slice(startIndex, endIndex);

const formatDate = (dateString: string) => {
	const date = new Date(dateString);
	const day = date.getDate().toString().padStart(2, '0');
	const month = (date.getMonth() + 1).toString().padStart(2, '0');
	const year = date.getFullYear().toString().slice(-2);
	return `${day}/${month}/${year}`;
};
---

<Layout 
	title="GameLayer Blog - Gamification Insights, Strategies & Best Practices"
	description="Explore the latest insights on gamification, user engagement strategies, and best practices for implementing gamification mechanics in your applications. Learn from industry experts and real-world case studies."
	keywords="gamification blog, gamification strategies, user engagement, customer loyalty, gamification mechanics, gamification API, user retention"
>
	<main id="main-content">
		<Header />
		
		<section class="blog-hero">
			<div class="container">
				<div class="blog-hero-content text-center">
					<h1 class="text-xlg">World of Gamification</h1>
					<p class="text-sm max-w-lg m-auto">Our micro-blog brings industry insights, strategies, and best practices for building user engagement and loyalty experiences with gamification.</p>
				</div>
			</div>
		</section>

		<section class="blog-posts">
			<div class="container">
				<div class="blog-grid">
					{blogPosts.map((post) => (
						<article class="blog-card">
							<div class="blog-card-header">
								<span class="blog-category">{post.category}</span>
								<span class="blog-date">{formatDate(post.date)}</span>
							</div>
							<div class="blog-card-content">
								<h2 class="blog-title">{post.title}</h2>
								<p class="blog-excerpt">{post.excerpt}</p>
								<div class="blog-card-footer">
									<span class="blog-read-time">{post.readTime}</span>
									<a href={`/blog/${post.slug}`} class="button button-primary blog-cta">Read Article</a>
								</div>
							</div>
						</article>
					))}
				</div>
				
				{totalPages > 1 && (
					<div class="blog-pagination">
						{currentPage > 1 && (
							<a href={currentPage === 2 ? '/blog' : `/blog/page/${currentPage - 1}`} class="pagination-link pagination-prev">
								← Previous
							</a>
						)}
						<div class="pagination-pages">
							{Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
								<a 
									href={page === 1 ? '/blog' : `/blog/page/${page}`}
									class={`pagination-link pagination-page ${page === currentPage ? 'active' : ''}`}
									aria-label={`Go to page ${page}`}
								>
									{page}
								</a>
							))}
						</div>
						{currentPage < totalPages && (
							<a href={`/blog/page/${currentPage + 1}`} class="pagination-link pagination-next">
								Next →
							</a>
						)}
					</div>
				)}
			</div>
		</section>

		<section class="blog-cta-section">
			<div class="container">
				<div class="blog-cta-content text-center max-w-lg m-auto">
					<h2 class="text-lg">Ready to take user engagement to the next level?</h2>
					<p class="text-sm">Start implementing gamification in your apps and digital services today. Sign up for free and get started in minutes.</p>
					<a href={EXTERNAL_URLS.CMS_DASHBOARD} target="_blank" rel="noopener noreferrer external" class="button button-primary" aria-label="Open GameLayer dashboard (external)">Sign Up Free</a>
				</div>
			</div>
		</section>

		<Footer />
	</main>

	<!-- Blog Structured Data for SEO -->
	<script type="application/ld+json" is:inline set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "Blog",
		"name": "World of Gamification",
		"description": "Gamification insights, strategies, and best practices",
		"url": "https://gamelayer.io/blog",
		"publisher": {
			"@type": "Organization",
			"name": "GameLayer",
			"url": "https://gamelayer.io",
			"logo": {
				"@type": "ImageObject",
				"url": "https://gamelayer.io/logo.png"
			}
		},
		"blogPost": allPosts.slice(0, 10).map(post => ({
			"@type": "BlogPosting",
			"headline": post.title,
			"datePublished": post.date,
			"description": post.metaDescription || post.excerpt,
			"url": `https://gamelayer.io/blog/${post.slug}/`
		}))
	})}></script>
</Layout>

<style lang="scss">
	main {
		background-color: #fff;
	}

	.blog-hero {
		background-color: var(--as-peach);
		padding: 100px 0 80px;
		
		.blog-hero-content {
			h1 {
				color: var(--as-black);
				margin-bottom: 20px;
			}
			
			p {
				color: var(--as-black);
				opacity: 0.8;
			}
		}

		// Tablet portrait (768px and below)
		@media (max-width: 768px) {
			padding: 80px 0 60px;
		}

		// Mobile landscape (640px and below)
		@media (max-width: 640px) {
			padding: 60px 0 50px;
		}
	}

	.blog-posts {
		padding: 80px 0;
		background-color: #fff;

		.blog-grid {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 3rem;
			max-width: 1400px;
			margin: 0 auto;
		}

		.blog-card {
			background: white;
			border: 1px solid #e5e5e5;
			border-radius: 12px;
			padding: 2rem;
			display: flex;
			flex-direction: column;
			transition: all 0.3s ease;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);

			&:hover {
				transform: translateY(-4px);
				box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
				border-color: var(--as-accent);
			}

			.blog-card-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 1.5rem;
				flex-wrap: wrap;
				gap: 0.5rem;
			}

			.blog-category {
				background-color: var(--as-plum);
				color: var(--as-accent);
				padding: 0.4rem 1rem;
				border-radius: 20px;
				font-size: 1.2rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.blog-date {
				color: var(--as-black);
				opacity: 0.6;
				font-size: 1.2rem;
			}

			.blog-card-content {
				flex-grow: 1;
				display: flex;
				flex-direction: column;
			}

			.blog-title {
				font-size: 2.2rem;
				font-weight: 600;
				color: var(--as-black);
				margin-bottom: 1.5rem;
				line-height: 1.3;
			}

			.blog-excerpt {
				font-size: 1.5rem;
				line-height: 1.6;
				color: var(--as-black);
				opacity: 0.8;
				margin-bottom: 2rem;
				flex-grow: 1;
			}

			.blog-card-footer {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-top: auto;
				padding-top: 1.5rem;
				border-top: 1px solid #f0f0f0;
			}

			.blog-read-time {
				font-size: 1.2rem;
				color: var(--as-black);
				opacity: 0.6;
			}

			.blog-cta {
				font-size: 1.3rem;
				padding: 0.8rem 2rem;
				height: auto;
				line-height: normal;
			}
		}

		// Tablet landscape (1024px and below)
		@media (max-width: 1024px) {
			.blog-grid {
				grid-template-columns: repeat(2, 1fr);
				gap: 2.5rem;
			}
		}

		// Tablet portrait (768px and below)
		@media (max-width: 768px) {
			padding: 60px 0;
			
			.blog-grid {
				grid-template-columns: repeat(2, 1fr);
				gap: 2rem;
			}

			.blog-card {
				padding: 1.5rem;

				.blog-title {
					font-size: 2rem;
				}

				.blog-excerpt {
					font-size: 1.4rem;
				}
			}
		}

		// Mobile landscape (640px and below)
		@media (max-width: 640px) {
			padding: 50px 0;
			
			.blog-grid {
				grid-template-columns: 1fr;
				gap: 2rem;
			}

			.blog-card {
				.blog-card-footer {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}

				.blog-cta {
					width: 100%;
				}
			}
		}

		// Mobile portrait (480px and below)
		@media (max-width: 480px) {
			padding: 40px 0;
			
			.blog-card {
				padding: 1.5rem;

				.blog-title {
					font-size: 1.8rem;
				}

				.blog-excerpt {
					font-size: 1.3rem;
				}

				.blog-category {
					font-size: 1.1rem;
					padding: 0.3rem 0.8rem;
				}

				.blog-date {
					font-size: 1.1rem;
				}
			}
		}
	}

	.blog-pagination {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		margin-top: 4rem;
		flex-wrap: wrap;

		.pagination-pages {
			display: flex;
			gap: 0.5rem;
			align-items: center;
		}

		.pagination-link {
			padding: 0.8rem 1.5rem;
			border: 1px solid #e5e5e5;
			border-radius: 8px;
			color: var(--as-black);
			text-decoration: none;
			font-size: 1.4rem;
			transition: all 0.3s ease;
			background: white;

			&:hover {
				border-color: var(--as-accent);
				color: var(--as-accent);
				transform: translateY(-2px);
			}

			&.active {
				background-color: var(--as-accent);
				color: white;
				border-color: var(--as-accent);
			}

			&.pagination-prev,
			&.pagination-next {
				font-weight: 600;
			}
		}

		// Mobile landscape (640px and below)
		@media (max-width: 640px) {
			gap: 0.5rem;
			margin-top: 3rem;

			.pagination-link {
				padding: 0.6rem 1.2rem;
				font-size: 1.3rem;
			}

			.pagination-pages {
				gap: 0.3rem;
			}
		}
	}

	.blog-cta-section {
		background-color: #F8FAFC;
		padding: 80px 0;

		.blog-cta-content {
			h2 {
				color: var(--as-black);
				margin-bottom: 20px;
			}

			p {
				color: var(--as-black);
				opacity: 0.8;
				margin-bottom: 30px;
			}

			.button {
				margin-top: 10px;
			}
		}

		// Tablet portrait (768px and below)
		@media (max-width: 768px) {
			padding: 60px 0;
		}

		// Mobile landscape (640px and below)
		@media (max-width: 640px) {
			padding: 50px 0;
		}
	}
</style>


<style lang="scss">
.terms-of-service {
	padding: 80px 0;
	background-color: #fff;
	min-height: calc(100vh - 116px - 120px);
	font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
	
	.terms-content {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 20px;
		
		h1 {
			font-size: 3rem;
			color: #000;
			margin-bottom: 0.5rem;
			text-align: left;
			font-weight: 700;
			line-height: 1.2;
		}
		
		.last-updated {
			font-size: 1.5rem;
			color: #666;
			margin-bottom: 2rem;
			font-weight: 400;
		}
		
		.intro {
			font-size: 1.5rem;
			line-height: 1.8;
			color: #333;
			margin-bottom: 1.5rem;
		}
		
		.section-divider {
			border: none;
			border-top: 1px solid #e0e0e0;
			margin: 2.5rem 0;
		}
		
		h2 {
			font-size: 1.875rem;
			color: #000;
			margin: 2rem 0 1rem 0;
			font-weight: 600;
			line-height: 1.3;
		}
		
		p {
			font-size: 1.5rem;
			line-height: 1.8;
			color: #333;
			margin-bottom: 1.25rem;
		}
		
		ul {
			margin: 1rem 0 1.5rem 1.5rem;
			padding-left: 0;
			
			li {
				font-size: 1.5rem;
				line-height: 1.8;
				color: #333;
				margin-bottom: 0.75rem;
				list-style-type: disc;
			}
		}
		
		strong {
			font-weight: 600;
			color: #000;
		}
		
		a {
			color: #0066cc;
			text-decoration: none;
			
			&:hover {
				text-decoration: underline;
			}
		}
		
		// Responsive design
		@media (max-width: 768px) {
			h1 {
				font-size: 2.5rem;
			}
			
			h2 {
				font-size: 1.625rem;
			}
			
			p, ul li, .intro, .last-updated {
				font-size: 1.35rem;
			}
		}
		
		@media (max-width: 480px) {
			h1 {
				font-size: 2.25rem;
			}
			
			h2 {
				font-size: 1.5rem;
			}
			
			p, ul li, .intro, .last-updated {
				font-size: 1.25rem;
			}
			
			.terms-content {
				padding: 0 15px;
			}
		}
	}
}
</style>

<style lang="scss">
.terms-of-service {
	padding: 100px 0 80px;
	background-color: var(--as-background);
	min-height: calc(100vh - 116px - 120px); // Account for header and footer heights
	
	.terms-content {
		max-width: 800px;
		margin: 0 auto;
		
		h1 {
			font-size: 3rem;
			color: var(--as-black);
			margin-bottom: 1rem;
			text-align: center;
			font-weight: 700;
		}
		
		.effective-date {
			font-size: 1.1rem;
			color: var(--as-black);
			text-align: center;
			margin-bottom: 3rem;
			font-weight: 600;
		}
		
		h2 {
			font-size: 2rem;
			color: var(--as-black);
			margin: 3rem 0 1.5rem 0;
			font-weight: 600;
			border-bottom: 2px solid var(--as-accent);
			padding-bottom: 0.5rem;
		}
		
		h3 {
			font-size: 1.4rem;
			color: var(--as-black);
			margin: 2rem 0 1rem 0;
			font-weight: 600;
		}
		
		h4 {
			font-size: 1.2rem;
			color: var(--as-black);
			margin: 1.5rem 0 0.8rem 0;
			font-weight: 600;
		}
		
		p {
			font-size: 1rem;
			line-height: 1.7;
			color: var(--as-text);
			margin-bottom: 1.5rem;
			text-align: justify;
		}
		
		ul {
			margin: 1rem 0 1.5rem 2rem;
			
			li {
				font-size: 1rem;
				line-height: 1.6;
				color: var(--as-text);
				margin-bottom: 0.5rem;
				
				ul {
					margin: 0.5rem 0 1rem 1.5rem;
				}
			}
		}
		
		strong {
			font-weight: 600;
			color: var(--as-black);
		}
		
		a {
			color: var(--as-accent);
			text-decoration: none;
			font-weight: 500;
			
			&:hover {
				text-decoration: underline;
			}
		}
		
		.consent-section {
			background-color: var(--as-peach);
			padding: 2rem;
			border-radius: 12px;
			margin: 3rem 0;
			border-left: 4px solid var(--as-accent);
			
			h3 {
				margin-top: 0;
				color: var(--as-black);
			}
			
			p {
				margin-bottom: 0;
				color: var(--as-black);
				font-weight: 500;
			}
		}
		
		// Responsive design
		@media (max-width: 768px) {
			h1 {
				font-size: 2.2rem;
			}
			
			h2 {
				font-size: 1.7rem;
			}
			
			h3 {
				font-size: 1.3rem;
			}
			
			h4 {
				font-size: 1.1rem;
			}
			
			.consent-section {
				padding: 1.5rem;
			}
		}
		
		@media (max-width: 480px) {
			h1 {
				font-size: 1.9rem;
			}
			
			h2 {
				font-size: 1.5rem;
			}
			
			h3 {
				font-size: 1.2rem;
			}
			
			.consent-section {
				padding: 1.2rem;
			}
			
			ul {
				margin-left: 1.5rem;
			}
		}
	}
}
</style>

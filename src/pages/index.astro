---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Brands from '../components/Brands.astro';
import Header from '../components/Header.astro';
import Features from '../components/Features.astro';
import Showcase from '../components/Showcase.astro';
import Reviews from '../components/Reviews.astro';
import Pricing from '../components/Pricing.astro';
import CallToAction from '../components/CallToAction.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
	title="GameLayer - Gamification API Platform for User Engagement & Customer Loyalty"
	description="Build powerful gamification experiences with GameLayer's comprehensive API. Increase user engagement, retention, and customer loyalty with our gamification platform. Easy integration, proven results."
	keywords="gamification API, gamification platform, user engagement, user retention, customer loyalty, gamification mechanics, API integration, gamification software"
>
	<main>
		<Header />
		<Hero />
		<Brands />
		<Features />
		<Showcase />
		<Reviews />
		<Pricing />
		<CallToAction />
		<Footer />
	</main>
	
	<!-- Additional Structured Data for Homepage -->
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "Organization",
		"name": "GameLayer",
		"url": "https://gamelayer.io",
		"logo": "https://gamelayer.io/gamelayer_logo.png",
		"description": "The leading gamification API platform for user engagement, retention, and customer loyalty",
		"foundingDate": "2012",
		"address": {
			"@type": "PostalAddress",
			"addressCountry": "FI",
			"addressLocality": "Finland"
		},
		"contactPoint": {
			"@type": "ContactPoint",
			"email": "contact@gamelayer.co",
			"contactType": "customer service"
		},
		"sameAs": [
			"https://gamelayer.io"
		],
		"offers": [
			{
				"@type": "Offer",
				"name": "Starter Plan",
				"price": "100",
				"priceCurrency": "EUR",
				"description": "Up to 1,000 active users with all gamification features"
			},
			{
				"@type": "Offer", 
				"name": "Growth Plan",
				"price": "1000",
				"priceCurrency": "EUR",
				"description": "Up to 25,000 active users with all gamification mechanics"
			},
			{
				"@type": "Offer",
				"name": "Scale Plan", 
				"price": "2500",
				"priceCurrency": "EUR",
				"description": "Up to 100,000 active users with advanced support"
			}
		]
	}
	</script>
	
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "WebSite",
		"name": "GameLayer",
		"url": "https://gamelayer.io",
		"description": "Gamification API platform for user engagement and customer loyalty",
		"publisher": {
			"@type": "Organization",
			"name": "GameLayer"
		},
		"potentialAction": {
			"@type": "SearchAction",
			"target": "https://gamelayer.io/api-docs/?q={search_term_string}",
			"query-input": "required name=search_term_string"
		}
	}
	</script>
</Layout>

<style>
	

	main{
		background-color: #fff;
	}

</style>

    /* Production CSS fix - force regeneration */
    --off-white: #fff9;

    --as-black: #000;
    --as-white: #f1f1f1;
    --as-offwhite: #f7f7f7;
    --as-accent: #2563EB;
    --as-peach: #EFF6FF;
    --as-plum: #DBEAFE;
    --section-warm: #F7F6F2;
    
    /* Card rhythm tokens - REMOVED: now defined in stepup-shell.scss */
    /* --page-bg: #FAFBFC; */
    /* --surface: #fafbfc; */
    /* --surface-border: rgba(0, 0, 0, 0.08); */
    --shadow-soft: 0 1px 3px rgba(0, 0, 0, 0.04), 0 1px 2px rgba(0, 0, 0, 0.02);
    /* --radius-xl: 24px; */
    --section-y: clamp(48px, 6vw, 96px);
    --surface-pad: clamp(20px, 3vw, 48px);
    
    /* Shared rail alignment for header, hero, and STICKY section */
    --gl-rail: clamp(24px, 4vw, 64px);
    
    /* Canvas and shell tokens - REMOVED: now defined in stepup-shell.scss */
    /* --canvas-bg: #f0f4f8; */
    /* --shell-bg: #fafbfc; */
    /* --shell-border: rgba(0, 0, 0, 0.12); */
    /* --shell-shadow: none; */
    /* --shell-radius: 24px; */
    /* --shell-max: 1400px; */
    
    /* ============================================
       GLOBAL DESIGN TOKENS - TYPOGRAPHY & SPACING
       ============================================ */
    
    /* Typography Tokens */
    --gl-font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    
    /* H1 - Hero heading */
    --gl-h1-size: clamp(40px, 4.5vw, 56px);
    --gl-h1-weight: 800;
    --gl-h1-line-height: 1.1;
    --gl-h1-margin-bottom: 16px;
    
    /* H2 - Section headings */
    --gl-h2-size: clamp(28px, 3.2vw, 36px);
    --gl-h2-weight: 700;
    --gl-h2-line-height: 1.15;
    --gl-h2-margin-bottom: 12px;
    
    /* H3 - Card titles, plan names */
    --gl-h3-size: 20px;
    --gl-h3-weight: 600;
    --gl-h3-line-height: 1.25;
    --gl-h3-margin-bottom: 8px;
    
    /* Body - Standard body copy */
    --gl-body-size: 16px;
    --gl-body-weight: 400;
    --gl-body-line-height: 1.6;
    --gl-body-color: #4B5563;
    --gl-body-max-width: 64ch;
    
    /* Small/Meta text - footnotes, captions */
    --gl-small-size: 14px;
    --gl-small-line-height: 1.5;
    --gl-small-color: #6B7280;
    
    /* Lede - One-line explanations under headings */
    --gl-lede-size: 16px;
    --gl-lede-weight: 400;
    --gl-lede-line-height: 1.6;
    --gl-lede-color: #4B5563;
    --gl-lede-max-width: 64ch;
    
    /* Spacing Tokens */
    --gl-space-xs: 8px;
    --gl-space-sm: 12px;
    --gl-space-md: 16px;
    --gl-space-lg: 32px;
    --gl-space-xl: 28px;
    
    /* Section Rhythm - Tighter for premium feel */
    --gl-section-padding-standard: clamp(16px, 2vw, 32px);
    --gl-section-padding-dense: clamp(14px, 2vw, 28px);
    
    /* Typography Spacing */
    --gl-heading-lede-gap-top: 8px;
    --gl-heading-lede-gap-bottom: 32px;
    --gl-lede-content-gap: 32px; /* Consistent spacing between lede text and next content element */
    --gl-card-content-gap: 12px;
    --gl-list-item-gap: 8px;
}


body, html{
    font-family: var(--gl-font-sans);
    scroll-behavior: smooth;
    margin: 0px;
    overflow-x: hidden;
    text-rendering: optimizeLegibility;
    /* background: var(--canvas-bg); - REMOVED: now handled by stepup-shell.scss */
    /* Note: font-size and line-height removed - scoped to .gl-typography only */
}


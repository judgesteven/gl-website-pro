---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astrobrew pro version" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">

		<title>{title}</title>
	</head>
	<body>
		<slot />
		
		<script>
			// Remove any popup elements with menu, inspect, audit, settings
			function removePopupElements() {
				const selectors = [
					'[class*="popup"]', '[class*="toolbar"]', '[class*="devtools"]', '[class*="debug"]',
					'[class*="inspector"]', '[class*="audit"]', '[class*="settings"]',
					'[id*="popup"]', '[id*="toolbar"]', '[id*="devtools"]', '[id*="debug"]',
					'[id*="inspector"]', '[id*="audit"]', '[id*="settings"]',
					'iframe[src*="devtools"]', 'iframe[src*="debug"]', 'iframe[src*="inspector"]',
					// Additional selectors for bottom popup elements
					'[class*="floating"]', '[class*="overlay"]', '[class*="widget"]', '[class*="panel"]',
					'[id*="floating"]', '[id*="overlay"]', '[id*="widget"]', '[id*="panel"]',
					'[class*="bottom"]', '[id*="bottom"]'
				];
				
				selectors.forEach(selector => {
					document.querySelectorAll(selector).forEach(el => {
						el.remove();
					});
				});
				
				// Also remove elements with inline styles that position them at the bottom
				document.querySelectorAll('*').forEach(el => {
					const style = el.style;
					if ((style.position === 'fixed' || style.position === 'absolute') && 
						(style.bottom !== '' || style.bottom !== 'auto')) {
						el.remove();
					}
				});
			}
			
			// Run immediately and on DOM changes
			document.addEventListener('DOMContentLoaded', removePopupElements);
			document.addEventListener('load', removePopupElements);
			
			// Watch for dynamically added elements
			const observer = new MutationObserver(removePopupElements);
			observer.observe(document.body, { childList: true, subtree: true });
		</script>
	</body>
</html>

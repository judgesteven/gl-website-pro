[id*="toolbar"], [id*="devtools"], [id*="debug"],
[id*="inspector"], [id*="audit"], [id*="settings"],
iframe[src*="devtools"], iframe[src*="debug"], iframe[src*="inspector"] {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
    pointer-events: none !important;
}

/* DEBUG ONLY: hide debug overlays/widgets without breaking real UI components */
body[data-hide-debug="on"] .debug-widget,
body[data-hide-debug="on"] .debug-panel,
body[data-hide-debug="on"] [data-debug="widget"],
body[data-hide-debug="on"] [data-debug="panel"],
body[data-hide-debug="on"] #bottom-widget,
body[data-hide-debug="on"] #bottom-panel {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
  pointer-events: none !important;
}


/* ============================================
   SCOPED TYPOGRAPHY - Main content only
   ============================================ */

/* Typography rules scoped to .gl-typography wrapper only */
.gl-typography {
    font-size: var(--gl-body-size);
    line-height: var(--gl-body-line-height);
    font-weight: var(--gl-body-weight);
    color: var(--gl-body-color);
}

.gl-typography p {
    font-size: var(--gl-body-size);
    line-height: var(--gl-body-line-height);
    font-weight: var(--gl-body-weight);
    color: var(--gl-body-color);
    text-rendering: optimizeLegibility;
    margin: 0;
    max-width: var(--gl-body-max-width);
}

.gl-typography h1 {
    font-size: var(--gl-h1-size);
    font-weight: var(--gl-h1-weight);
    line-height: var(--gl-h1-line-height);
    letter-spacing: -0.02em;
    margin: 0 0 var(--gl-h1-margin-bottom);

---
import SocialImage from '../images/gamelayer_social.png';

interface Props {
	title: string;
	description?: string;
	keywords?: string;
	ogImage?: string;
	canonical?: string;
}

const { 
	title, 
	description = "GameLayer - The leading gamification API platform for user engagement, retention, and customer loyalty. Build powerful gamification experiences with our comprehensive API.",
	keywords = "gamification, gamification API, gamification platform, user engagement, user retention, customer loyalty, gamification mechanics, API integration",
	ogImage = SocialImage.src,
	canonical = Astro.url.href
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="GameLayer" />
		<meta name="robots" content="index, follow, max-image-preview:large" />
		<link rel="canonical" href={canonical} />
		
		<!-- Additional SEO Meta Tags -->
		<meta name="theme-color" content="#FF6B35" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="format-detection" content="telephone=no" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="msapplication-TileColor" content="#FF6B35" />
		<meta name="msapplication-config" content="/browserconfig.xml" />
		
		<!-- Google Search Console Verification -->
		<meta name="google-site-verification" content="B5sXnvlhRyPD-TK1buZmP9PHQ1EwqAsVvCM3OvV8EsE" />
		
		<!-- Google Analytics 4 -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-63MBQ0CMFJ" is:inline></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-63MBQ0CMFJ', {
			  anonymize_ip: true,
			  send_page_view: true
			});
		</script>
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:image:alt" content="GameLayer gamification platform - API for user engagement and customer loyalty" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="GameLayer" />
		<meta property="og:locale" content="en_US" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonical} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={ogImage} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" href="/favicon.png" />
		
		<!-- DNS Prefetch for external resources -->
		<link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
		<link rel="dns-prefetch" href="//fonts.googleapis.com" />
		<link rel="dns-prefetch" href="//www.googletagmanager.com" />
		<link rel="dns-prefetch" href="//www.google-analytics.com" />
		
		<!-- Preconnect for critical external resources -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Load Google Fonts -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap"></noscript>
		
		<!-- Stylesheets -->
		<link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"></noscript>
		
		<!-- Fallback CSS loading script -->
		<script is:inline>
			// Fallback for CSS loading
			setTimeout(function() {
				var links = document.querySelectorAll('link[rel="preload"][as="style"]');
				links.forEach(function(link) {
					if (link.onload) {
						link.rel = 'stylesheet';
						link.onload = null;
					}
				});
			}, 100);
		</script>
		<!-- JSON-LD Structured Data for SEO and AI Visibility -->
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": ["SoftwareApplication", "Organization"],
			"name": "GameLayer",
			"url": "https://gamelayer.io",
			"logo": "https://gamelayer.io/logo.png",
			"description": "GameLayer is a gamification API platform that lets developers add missions, streaks, achievements, and loyalty mechanics to their apps and websites.",
			"applicationCategory": "Gamification Platform",
			"operatingSystem": "Cloud",
			"offers": {
				"@type": "Offer",
				"price": "Free trial available"
			},
			"founder": {
				"@type": "Person",
				"name": "Steven Judge"
			}
		}
		</script>
		
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": "FAQPage",
			"mainEntity": [
				{
					"@type": "Question",
					"name": "What is GameLayer?",
					"acceptedAnswer": {
						"@type": "Answer",
						"text": "GameLayer is a gamification-as-a-service API that lets developers add missions, achievements, and loyalty mechanics to their apps and websites."
					}
				},
				{
					"@type": "Question",
					"name": "Who uses GameLayer?",
					"acceptedAnswer": {
						"@type": "Answer",
						"text": "Product managers, developers, and marketers who want to boost engagement and retention through gamification."
					}
				},
				{
					"@type": "Question",
					"name": "Does GameLayer integrate easily with existing apps?",
					"acceptedAnswer": {
						"@type": "Answer",
						"text": "Yes. GameLayer offers a REST API that can be integrated in minutes using simple JSON endpoints."
					}
				}
			]
		}
		</script>

		<!-- Vercel Web Analytics / Speed Insights -->
		<script defer src="/_vercel/insights/script.js" data-auto="true" is:inline></script>
	</head>
	<body>
		<!-- Skip navigation link for accessibility -->
		<a href="#main-content" class="skip-link">Skip to main content</a>
		
		<slot />
		
		<script>
		// Optimized cleanup - lighter and faster
		function removeUnwantedElements() {
			const selectors = ['[class*="toolbar"]', '[class*="devtools"]', '[class*="debug"]'];
			selectors.forEach(selector => {
				document.querySelectorAll(selector).forEach(el => el.remove());
			});
		}
		
		// Run after DOM is ready
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', removeUnwantedElements);
		} else {
			removeUnwantedElements();
		}
		</script>
		
		
		
	</body>
</html>
<style lang="scss" is:global>
/* Remove font import - now loaded via <link> tag */

/* Skip navigation link for accessibility */
.skip-link {
	position: absolute;
	top: -40px;
	left: 6px;
	background: var(--as-black);
	color: var(--as-white);
	z-index: 1000;
	padding: 8px;
	text-decoration: none;
	font-size: 1.4rem;
	border-radius: 4px;
	transition: top 0.2s ease-out;
	
	&:focus {
		top: 6px;
		outline: 2px solid var(--as-accent);
		outline-offset: 2px;
	}
}


:root {
    /* Production CSS fix - force regeneration */
    --off-white: #fff9;

    --as-black: #000;
    --as-white: #f1f1f1;
    --as-offwhite: #f7f7f7;
    --as-accent: #FF553E;
    --as-peach: #FFF8F2;
    --as-plum: #FFF2F0;
}


body, html{
    font-family: "Onest", sans-serif;
    scroll-behavior: smooth;
    margin: 0px;
    overflow-x: hidden;
}

/* Hide any unwanted injected elements */
[class*="toolbar"], [class*="devtools"], [class*="debug"], 
[class*="inspector"], [class*="audit"], [class*="settings"], 
[id*="toolbar"], [id*="devtools"], [id*="debug"],
[id*="inspector"], [id*="audit"], [id*="settings"],
iframe[src*="devtools"], iframe[src*="debug"], iframe[src*="inspector"],
/* Additional selectors for unwanted elements */
[class*="widget"], [class*="panel"],
[id*="widget"], [id*="panel"],
[class*="bottom"], [id*="bottom"] {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
    pointer-events: none !important;
}


p{
    line-height: 1.4;
    font-weight: 300;
}
 h1, h2, h3{
	line-height: 1.2;
}

section{ 
    padding: 130px 0;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 100px 0;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 80px 0;
    }
    
    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 60px 0;
    }
    
    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 50px 0;
    }
    
    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 40px 0;
    }
}


.gap-0{ gap: 2px;}	
.gap-1{ gap: 10px; }
.gap-2{ gap: 20px; }
.gap-3{ gap: 30px; }


.text-md{ 
    font-size: 3rem;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        font-size: 2.5rem;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        font-size: 2.2rem;
    }
    
	// Mobile landscape (640px and below)
	@media (max-width: 640px) {
		font-size: 2.1rem;
	}
	
	// Mobile portrait (480px and below)
	@media (max-width: 480px) {
		font-size: 1.9rem;
	}
	
	// Very small mobile (360px and below)
	@media (max-width: 360px) {
		font-size: 1.7rem;
	}
}

.text-sm{  
    font-size: 1.8rem;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        font-size: 1.6rem;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        font-size: 1.5rem;
    }
    
	// Mobile landscape (640px and below)
	@media (max-width: 640px) {
		font-size: 1.5rem;
	}
	
	// Mobile portrait (480px and below)
	@media (max-width: 480px) {
		font-size: 1.4rem;
	}
	
	// Very small mobile (360px and below)
	@media (max-width: 360px) {
		font-size: 1.3rem;
	}
}

.text-xs{ 
    font-size: 1.6rem;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        font-size: 1.4rem;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        font-size: 1.3rem;
    }
    
	// Mobile landscape (640px and below)
	@media (max-width: 640px) {
		font-size: 1.3rem;
	}
	
	// Mobile portrait (480px and below)
	@media (max-width: 480px) {
		font-size: 1.2rem;
	}
	
	// Very small mobile (360px and below)
	@media (max-width: 360px) {
		font-size: 1.1rem;
	}
}

.text-xlg{
    font-size: 5.6rem;
    font-weight: 600;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        font-size: 4.8rem;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        font-size: 4.2rem;
    }
    
	// Mobile landscape (640px and below)
	@media (max-width: 640px) {
		font-size: 4rem;
	}
	
	// Mobile portrait (480px and below)
	@media (max-width: 480px) {
		font-size: 3.4rem;
	}
	
	// Very small mobile (360px and below)
	@media (max-width: 360px) {
		font-size: 3rem;
	}
}

.text-lg{
    font-size: 4rem;
    font-weight: 600;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        font-size: 3.5rem;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        font-size: 3rem;
    }
    
	// Mobile landscape (640px and below)
	@media (max-width: 640px) {
		font-size: 3rem;
	}
	
	// Mobile portrait (480px and below)
	@media (max-width: 480px) {
		font-size: 2.6rem;
	}
	
	// Very small mobile (360px and below)
	@media (max-width: 360px) {
		font-size: 2.4rem;
	}
}



.text-bolder{ font-weight: 600;}
.text-bold{ font-weight: 500;}
.text-normal{ font-weight: 300;}


.text-center{text-align: center; }
.align-center{ align-items: center; }


.max-w-sm{ 
    max-width: 350px;
    
    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        max-width: 300px;
    }
}

.max-w-md{ 
    max-width: 700px;
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        max-width: 600px;
    }
    
    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        max-width: 90%;
    }
}

.max-w-lg{ 
    max-width: 900px;
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        max-width: 800px;
    }
    
    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        max-width: 95%;
    }
}
.w-full{ width: 100%; }


.m-auto{ margin: auto; }

.mt-1{ margin-top: 10px; }
.mt-2{ margin-top: 20px; }
.mt-3{ margin-top: 30px; }
.mt-4{ margin-top: 70px; }




.button{
    border-radius: 40px;
    text-transform: none;
    font-weight: 500;
    font-size: 1.6rem;
	height: 55px;
	line-height: 53px;
    transition: box-shadow .15s ease-out;
    
    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        font-size: 1.4rem;
        height: 50px;
        line-height: 48px;
    }
    
    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        font-size: 1.3rem;
        height: 48px;
        line-height: 46px;
    }
    
    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        font-size: 1.2rem;
        height: 45px;
        line-height: 43px;
    }
    
    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        font-size: 1.1rem;
        height: 42px;
        line-height: 40px;
    }
    
    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        font-size: 1rem;
        height: 40px;
        line-height: 38px;
    }
}

.button.button-primary, .button.button-primary:hover, .button.button-primary:active, .button.button-primary:focus{
    background-color: var(--as-accent);
    border-color: var(--as-accent);
    &:hover{
        opacity: 0.95;
        box-shadow: 0 0 0 5px var(--as-plum);
    }
}

.button:not(.button-primary){
    border: 2px solid var(--as-black);
    &:hover{
        box-shadow: 0 0 0 5px #2c2c2c26;
    }
}


.flex-center{
	display: flex;
    align-items: center;
    justify-content: center;
}
.grid-half{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
}
.flex-inline{ display: inline-flex; }
.flex{ display: flex;}
.grid{  display: grid; }



.avatar {
    width: 84px;
    height: 84px;
    overflow: hidden;
    border-radius: 50%;
}
.avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}


@media (max-width: 700px) {
    .text-xlg{
        font-size: 4rem;
    }

    .text-lg{
        font-size: 3rem;
    }
    
    // Responsive grid utilities
    .grid-half{
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    // Responsive flex utilities
    .flex-center{
        flex-direction: column;
        gap: 1rem;
    }
    
    // Responsive spacing
    .gap-2{ gap: 15px; }
    .gap-3{ gap: 20px; }
    .mt-4{ margin-top: 50px; }

    /* Mobile-only container padding for better edge spacing */
    .container{
        padding-left: 20px;
        padding-right: 20px;
    }
}

/* Tighter phones */
@media (max-width: 480px) {
    .container{
        padding-left: 24px;
        padding-right: 24px;
    }
}

</style>

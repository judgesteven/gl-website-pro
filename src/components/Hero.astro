---
import HeroImage from '../images/web-image-hero2.png'
---

<section id="hero">
    <div class="container">
      <div class="grid-half align-center gap-2">
        <div class="hero-text">
            <h1 class="text-xlg">Gamification API Platform</h1>
            <p class="text-md">Build user engagement and customer loyalty experiences with a simple API integration.</p>
            <div class="flex gap-2 mt-2">
                <a href="/api-docs" class="button button-primary" aria-label="View GameLayer API Documentation">API Specification</a>
            </div>
        </div>
        <div class="hero-media">
            <img 
                src={HeroImage.src} 
                alt="GameLayer gamification API platform interface showing user engagement and customer loyalty features" 
                loading="eager" 
                fetchpriority="high"
                width="600"
                height="400"
                style="width: 120%; height: auto; border-radius: 30px;"
            >
        </div>
      </div>

    </div>
</section>

<style lang="scss">



section{
    padding-top: 90px;
    .hero-text{
        .text-md{
            font-size: 2.2rem;
            line-height: 1.3;
        }
        h1, p{
            color: var(--as-black);
        }
        
        // Enhanced hover effect for API Specification button
        .button {
            transition: all 0.3s ease;
            
            &:hover {
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
            }
        }
    }
    .hero-media{
        img{
            width: 120%;
            height: auto;
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding-top: 80px;
        .hero-text{
            .text-md{
                font-size: 2rem;
            }
        }
        .hero-media img{
            width: 110%;
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding-top: 70px;
        .hero-text{
            .text-md{
                font-size: 1.8rem;
            }
        }
        .hero-media img{
            width: 100%;
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding-top: 60px;
        .hero-text{
            .text-md{
                font-size: 1.6rem;
            }
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding-top: 50px;
        .grid-half{
            grid-template-columns: 1fr;
            text-align: center;
            gap: 1rem;
        }
        .hero-text{
            .text-md{
                font-size: 1.6rem;
                line-height: 1.4;
            }
        }
        .hero-media{
            display: none;
        }
    }

    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding-top: 40px;
        .hero-text{
            .text-md{
                font-size: 1.3rem;
            }
        }
    }
}
</style>
---
import GameLayerLogo from '../images/gamelayer_logo_Or.png'
import utils from '../utils'
---

<header>
    <nav class="navbar grid container">
        <div class="nav-logo">
            <a href="/" aria-label="GameLayer - Gamification API Platform">
                <img src={GameLayerLogo.src} alt="GameLayer - Gamification API platform for user engagement and customer loyalty" width="150">
            </a>
        </div>
        <div class="nav-links">
            <ul class="flex-center">
                <li><a href="#features" aria-label="Gamification features and mechanics">Features</a></li>
                <li><a href="#solutions" aria-label="Customer success stories and case studies">References</a></li>
                <li><a href="#pricing" aria-label="Gamification platform pricing plans">Pricing</a></li>
            </ul>
        </div>
        <div class="nav-cta flex-center gap-2">
            <span class="button button-primary" aria-label="Free Version coming soon">Free Version</span>
            <a href="/api-docs" aria-label="GameLayer API documentation">API Docs</a>
        </div>
        <div class="mobile-menu">
            <ul>
                <li><a href="#features" aria-label="Gamification features and mechanics">Features</a></li>
                <li><a href="#solutions" aria-label="Customer success stories and case studies">References</a></li>
                <li><a href="#pricing" aria-label="Gamification platform pricing plans">Pricing</a></li>
                <li><span class="button button-primary" aria-label="Free Version coming soon">Free Version</span></li>
                <li><a href="/api-docs" aria-label="GameLayer API documentation">API Docs</a></li>
            </ul>
        </div>
        <div class="menu-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
              <path fill-rule="evenodd" d="M3 9a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 9Zm0 6.75a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
            </svg>                  
        </div>
    </nav>
</header>


<script>

    const menu = document.querySelector('.menu-icon') as any

    menu.addEventListener('click', () => {
        document.querySelectorAll('.mobile-menu').forEach(item => {
            item.classList.toggle('open')
        })
    })

</script>


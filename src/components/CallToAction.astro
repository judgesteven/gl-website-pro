---
import CtaImage from '../images/cta.svg'
import utils from '../utils'
---

<section>
    <div class="container">
        <div class="grid-half align-center">
            <div>
                <img src={CtaImage.src} alt="cta image">
            </div>
            <div class="cta">
                <h2 class="text-xlg">Your next lending product awaits</h2>
                <p class="text-sm">For those who want more from their lending products, thereâ€™s Canopy. Get started today and never look back.</p>
                <a href={utils.config.buy_url} target="_blank" class="button button-primary">Buy template {utils.config.title}</a>
            </div>
        </div>
        
    </div>
</section>



<style lang="scss">

section{
    background-color: var(--as-peach);
    padding: 80px 0;

    img{
        width: 80%;
        transform: translateX(-10px);
        height: auto;
    }

    .cta{
        h2{
            color: var(--as-black);
            margin-bottom: 20px;
        }
        p{
            color: var(--as-black);
            margin-bottom: 30px;
            line-height: 1.5;
        }
        .button{
            font-size: 1.1rem;
            padding: 12px 24px;
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 70px 0;
        img{
            width: 75%;
        }
        .cta{
            h2{
                font-size: 2.2rem;
            }
            p{
                font-size: 1rem;
            }
            .button{
                font-size: 1rem;
                padding: 10px 20px;
            }
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 60px 0;
        img{
            width: 70%;
            transform: translateX(-5px);
        }
        .cta{
            h2{
                font-size: 2rem;
            }
            p{
                font-size: 0.95rem;
            }
            .button{
                font-size: 0.95rem;
                padding: 10px 18px;
            }
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 50px 0;
        img{
            width: 65%;
        }
        .cta{
            h2{
                font-size: 1.8rem;
            }
            p{
                font-size: 0.9rem;
            }
            .button{
                font-size: 0.9rem;
                padding: 8px 16px;
            }
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 40px 0;
        .grid-half{
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }
        img{
            width: 60%;
            transform: none;
            margin: 0 auto;
            display: block;
        }
        .cta{
            margin-top: 0;
            h2{
                font-size: 1.6rem;
            }
            p{
                font-size: 0.85rem;
                margin-bottom: 25px;
            }
            .button{
                font-size: 0.85rem;
                padding: 8px 14px;
                width: 100%;
                max-width: 280px;
            }
        }
    }

    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 30px 0;
        img{
            width: 55%;
        }
        .cta{
            h2{
                font-size: 1.4rem;
            }
            p{
                font-size: 0.8rem;
            }
            .button{
                font-size: 0.8rem;
                padding: 6px 12px;
            }
        }
    }
}
</style>
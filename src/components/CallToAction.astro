---
import CtaImage from '../images/web-image-cta-new.png'
import { EXTERNAL_URLS } from '../lib/external'
---

<section aria-label="Get started with GameLayer">
    <div class="container">
        <div class="grid-half align-center">
            <div class="image-container">
                <img 
                    src={CtaImage.src} 
                    alt="GameLayer gamification platform - digital engagement and loyalty points system" 
                    loading="lazy" 
                    decoding="async"
                    width="420"
                    height="420"
                    style="width: 80%; transform: translate(-10px); height: auto;"
                >
            </div>
            <div class="cta">
                <h2 class="text-xlg">Start building engagement that lasts</h2>
                <p class="text-sm">Whether you're experimenting or scaling in production, GameLayer gives you the tools to design engagement mechanics that fit your product - quickly and safely.</p>
                <div class="cta-buttons">
                    <a href={EXTERNAL_URLS.CMS_DASHBOARD} target="_blank" rel="noopener noreferrer external" class="button button-primary" aria-label="Get API key for GameLayer (external)">Get API Key</a>
                    <a href="/api-docs" class="button" aria-label="View GameLayer API documentation">View API Docs</a>
                </div>
                <p class="micro-support">No credit card required to get started</p>
            </div>
        </div>
        
    </div>
</section>



<style lang="scss">

section{
    background-color: #F8FAFC;
    padding: 80px 0;

    img{
        width: 80%;
        transform: translateX(-10px);
        height: auto;
    }

    .cta{
        h2{
            color: var(--as-black);
            margin-bottom: 20px;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }
        p{
            color: var(--as-black);
            margin-bottom: 30px;
            line-height: 1.5;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }
        
        .cta-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: center;
            margin-bottom: 1rem;
            
            .button {
                min-height: 44px; // WCAG AA tap target minimum
                transition: all 0.3s ease;
                
                // Focus states for accessibility
                &:focus-visible {
                    outline: 3px solid var(--as-accent);
                    outline-offset: 2px;
                }
                
                &:hover {
                    transform: translateY(-2px) scale(1.05);
                    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
                }
            }
            
            // Lighten border for secondary button
            .button:not(.button-primary) {
                border-color: rgba(0, 0, 0, 0.4);
                
                &:hover {
                    border-color: rgba(0, 0, 0, 0.5);
                }
            }
        }
        
        .micro-support {
            font-size: 15px;
            font-style: italic;
            color: var(--as-black);
            opacity: 0.65;
            text-align: center;
            margin-top: 1rem;
            line-height: 1.5;
        }
        
        .cta-contact-button{
            display: inline-flex; // Use inline-flex for inline behavior with flex centering
            border-radius: 20px;
            text-transform: none;
            font-weight: 500;
            font-size: 1.4rem; // Restored original desktop size
            height: 28px;
            line-height: 28px; // Match height for perfect centering
            padding: 0 8px; // Restored original padding
            margin: 0 2px; // Restored original margin
            vertical-align: middle; // Center vertically in text line
            transition: all 0.3s ease;
            text-align: center; // Center text horizontally
            align-items: center; // Center vertically
            justify-content: center; // Center horizontally
            
            &:hover{
                opacity: 0.95;
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
            }
            
            // Responsive sizing
            @media (max-width: 1024px) {
                font-size: 1.2rem; // Restored original tablet size
                height: 26px;
                line-height: 26px; // Match height for centering
                padding: 0 6px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
            
            @media (max-width: 768px) {
                font-size: 1.5rem; // Increased from 1.3rem
                height: 28px; // Increased from 24px
                line-height: 28px; // Match height for centering
                padding: 0 5px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
            
            @media (max-width: 640px) {
                font-size: 1.4rem; // Increased from 1.2rem
                height: 26px; // Increased from 22px
                line-height: 26px; // Match height for centering
                padding: 0 4px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
            
            @media (max-width: 480px) {
                font-size: 1.3rem; // Increased from 1.1rem
                height: 24px; // Increased from 20px
                line-height: 24px; // Match height for centering
                padding: 0 3px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 70px 0;
        img{
            width: 75%;
        }
        .cta{
            h2{
                font-size: 2.2rem;
            }
            p{
                font-size: 1.15rem;
            }
            .cta-buttons {
                .button {
                    min-height: 44px;
                }
            }
            .micro-support {
                font-size: 1.3rem;
            }
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 60px 0;
        img{
            width: 70%;
            transform: translateX(-5px);
        }
        .cta{
            h2{
                font-size: 2rem;
            }
            p{
                font-size: 1.1rem;
            }
            .cta-buttons {
                flex-direction: column;
                gap: 0.75rem;
                
                .button {
                    width: 100%;
                    text-align: center;
                    min-height: 48px;
                }
            }
            .micro-support {
                font-size: 1.3rem;
            }
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 50px 0;
        img{
            width: 65%;
        }
        .cta{
            h2{
                font-size: 1.8rem;
            }
            p{
                font-size: 1.3rem;
            }
            .cta-buttons {
                flex-direction: column;
                gap: 0.75rem;
                
                .button {
                    width: 100%;
                    text-align: center;
                    min-height: 48px;
                }
            }
            .micro-support {
                font-size: 1.2rem;
            }
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 40px 0;
        .grid-half{
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }
        img{
            width: 60%;
            transform: none;
            margin: 0 auto;
            display: block;
        }
        .cta{
            margin-top: 0;
            h2{
                font-size: 1.6rem;
            }
            p{
                font-size: 1.2rem;
            }
            .cta-buttons {
                flex-direction: column;
                gap: 0.75rem;
                
                .button {
                    width: 100%;
                    text-align: center;
                    min-height: 48px;
                }
            }
            .micro-support {
                font-size: 1.1rem;
            }
        }
    }

    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 30px 0;
        img{
            width: 55%;
        }
        .cta{
            h2{
                font-size: 1.4rem;
            }
            p{
                font-size: 1.2rem;
            }
            .cta-buttons {
                flex-direction: column;
                gap: 0.75rem;
                
                .button {
                    width: 100%;
                    text-align: center;
                    min-height: 48px;
                }
            }
            .micro-support {
                font-size: 1rem;
            }
        }
    }
}
</style>
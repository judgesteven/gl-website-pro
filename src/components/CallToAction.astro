---
import CtaImage from '../images/web-image-cta-new.png'
import { EXTERNAL_URLS } from '../lib/external'
---

<section>
    <div class="container">
        <div class="grid-half align-center">
            <div class="image-container">
                <img 
                    src={CtaImage.src} 
                    alt="GameLayer gamification platform - digital engagement and loyalty points system" 
                    loading="lazy" 
                    fetchpriority="auto"
                    width="420"
                    height="420"
                    style="width: 80%; transform: translate(-10px); height: auto;"
                >
            </div>
            <div class="cta">
                <h2 class="text-xlg">Start building engagement that delivers. Today.</h2>
                <p class="text-sm">Need help designing engagement or loyalty for your product or service? We're available if you need guidance to get the most out of GameLayer.</p>
                <a href={EXTERNAL_URLS.CMS_DASHBOARD} target="_blank" rel="noopener noreferrer external" class="button button-primary" aria-label="Open GameLayer dashboard (external)">Sign Up Free</a>
            </div>
        </div>
        
    </div>
</section>



<style lang="scss">

section{
    background-color: #F8FAFC;
    padding: 80px 0;

    img{
        width: 80%;
        transform: translateX(-10px);
        height: auto;
    }

    .cta{
        h2{
            color: var(--as-black);
            margin-bottom: 20px;
        }
        p{
            color: var(--as-black);
            margin-bottom: 30px;
            line-height: 1.5;
        }
        .button{
            display: block;
            margin: 0 auto;
            width: fit-content;
        }
        
        .cta-contact-button{
            display: inline-flex; // Use inline-flex for inline behavior with flex centering
            border-radius: 20px;
            text-transform: none;
            font-weight: 500;
            font-size: 1.4rem; // Restored original desktop size
            height: 28px;
            line-height: 28px; // Match height for perfect centering
            padding: 0 8px; // Restored original padding
            margin: 0 2px; // Restored original margin
            vertical-align: middle; // Center vertically in text line
            transition: all 0.3s ease;
            text-align: center; // Center text horizontally
            align-items: center; // Center vertically
            justify-content: center; // Center horizontally
            
            &:hover{
                opacity: 0.95;
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
            }
            
            // Responsive sizing
            @media (max-width: 1024px) {
                font-size: 1.2rem; // Restored original tablet size
                height: 26px;
                line-height: 26px; // Match height for centering
                padding: 0 6px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
            
            @media (max-width: 768px) {
                font-size: 1.5rem; // Increased from 1.3rem
                height: 28px; // Increased from 24px
                line-height: 28px; // Match height for centering
                padding: 0 5px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
            
            @media (max-width: 640px) {
                font-size: 1.4rem; // Increased from 1.2rem
                height: 26px; // Increased from 22px
                line-height: 26px; // Match height for centering
                padding: 0 4px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
            
            @media (max-width: 480px) {
                font-size: 1.3rem; // Increased from 1.1rem
                height: 24px; // Increased from 20px
                line-height: 24px; // Match height for centering
                padding: 0 3px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 70px 0;
        img{
            width: 75%;
        }
        .cta{
            h2{
                font-size: 2.2rem;
            }
            p{
                font-size: 1.15rem; // Increased from 1rem to match gamification features
            }
            .button{
                font-size: 1rem;
                padding: 10px 20px;
            }
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 60px 0;
        img{
            width: 70%;
            transform: translateX(-5px);
        }
        .cta{
            h2{
                font-size: 2rem;
            }
            p{
                font-size: 1.1rem;
            }
            .button{
                font-size: 0.95rem;
                padding: 10px 18px;
            }
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 50px 0;
        img{
            width: 65%;
        }
        .cta{
            h2{
                font-size: 1.8rem;
            }
            p{
                font-size: 1.3rem; // Increased from 1.05rem to match gamification features
            }
            .button{
                font-size: 0.9rem;
                padding: 8px 16px;
            }
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 40px 0;
        .grid-half{
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }
        img{
            width: 60%;
            transform: none;
            margin: 0 auto;
            display: block;
        }
        .cta{
            margin-top: 0;
            h2{
                font-size: 1.6rem;
            }
            p{
                font-size: 1.2rem; // Increased from 1rem to match gamification features
            }
            .button{
                font-size: 0.85rem;
                padding: 8px 14px;
                width: 100%;
                max-width: 280px;
            }
        }
    }

    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 30px 0;
        img{
            width: 55%;
        }
        .cta{
            h2{
                font-size: 1.4rem;
            }
            p{
                font-size: 1.2rem; // Increased from 0.95rem to match gamification features
            }
            .button{
                font-size: 0.8rem;
                padding: 6px 12px;
            }
            .cta-contact-button{
                font-size: 1.2rem; // Increased from 1.0rem
                height: 22px;
                line-height: 22px; // Match height for centering
                padding: 0 2px; // Restored original padding
                margin: 0 2px; // Restored original margin
            }
        }
    }
}
</style>
---
import CtaImage from '../images/cta.svg'
---

<section>
    <div class="container">
        <div class="grid-half align-center">
            <div>
                <img src={CtaImage.src} alt="GameLayer gamification platform interface for building user engagement and customer loyalty experiences" loading="lazy">
            </div>
            <div class="cta">
                <h2 class="text-xlg">What will you build with GameLayer?</h2>
                <p class="text-sm">We are always happy to help our customers build the best possible user engagement and customer loyalty experiences ... hit us up with a <a href="mailto:contact@gamelayer.co?subject=GameLayer%3A%20General%20Enquiry" class="button button-primary cta-contact-button">contact</a> if you would like our input :)</p>
            </div>
        </div>
        
    </div>
</section>



<style lang="scss">

section{
    background-color: var(--as-peach);
    padding: 80px 0;

    img{
        width: 80%;
        transform: translateX(-10px);
        height: auto;
    }

    .cta{
        h2{
            color: var(--as-black);
            margin-bottom: 20px;
        }
        p{
            color: var(--as-black);
            margin-bottom: 30px;
            line-height: 1.5;
        }
        .button{
            font-size: 1.1rem;
            padding: 12px 24px;
        }
        
        .cta-contact-button{
            display: inline-block;
            border-radius: 20px;
            text-transform: none;
            font-weight: 500;
            font-size: 1.4rem;
            height: 28px;
            line-height: 26px;
            padding: 0 8px;
            margin: 0 2px;
            vertical-align: baseline;
            transition: box-shadow .15s ease-out;
            
            &:hover{
                opacity: 0.95;
                box-shadow: 0 0 0 2px var(--as-plum);
            }
            
            // Responsive sizing
            @media (max-width: 1024px) {
                font-size: 1.2rem;
                height: 26px;
                line-height: 24px;
                padding: 0 6px;
            }
            
            @media (max-width: 768px) {
                font-size: 1.1rem;
                height: 24px;
                line-height: 22px;
                padding: 0 5px;
            }
            
            @media (max-width: 640px) {
                font-size: 1rem;
                height: 22px;
                line-height: 20px;
                padding: 0 4px;
            }
            
            @media (max-width: 480px) {
                font-size: 0.9rem;
                height: 20px;
                line-height: 18px;
                padding: 0 3px;
            }
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 70px 0;
        img{
            width: 75%;
        }
        .cta{
            h2{
                font-size: 2.2rem;
            }
            p{
                font-size: 1rem;
            }
            .button{
                font-size: 1rem;
                padding: 10px 20px;
            }
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 60px 0;
        img{
            width: 70%;
            transform: translateX(-5px);
        }
        .cta{
            h2{
                font-size: 2rem;
            }
            p{
                font-size: 0.95rem;
            }
            .button{
                font-size: 0.95rem;
                padding: 10px 18px;
            }
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 50px 0;
        img{
            width: 65%;
        }
        .cta{
            h2{
                font-size: 1.8rem;
            }
            p{
                font-size: 0.9rem;
            }
            .button{
                font-size: 0.9rem;
                padding: 8px 16px;
            }
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 40px 0;
        .grid-half{
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }
        img{
            width: 60%;
            transform: none;
            margin: 0 auto;
            display: block;
        }
        .cta{
            margin-top: 0;
            h2{
                font-size: 1.6rem;
            }
            p{
                font-size: 0.85rem;
                margin-bottom: 25px;
            }
            .button{
                font-size: 0.85rem;
                padding: 8px 14px;
                width: 100%;
                max-width: 280px;
            }
        }
    }

    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 30px 0;
        img{
            width: 55%;
        }
        .cta{
            h2{
                font-size: 1.4rem;
            }
            p{
                font-size: 0.8rem;
            }
            .button{
                font-size: 0.8rem;
                padding: 6px 12px;
            }
        }
    }
}
</style>
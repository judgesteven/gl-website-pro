---
import GameLayerLogo from '../images/gamelayer_logo_footer.png'

const links = [
    { title: 'Terms of Service', link: '/terms-of-service' },
    { title: 'Privacy Policy', link: '/privacy-policy' },
    { title: 'DPA', link: '/dpa' },
]
---

<footer>
    <div class="container">
        <div class="footer-content">
            <div class="footer-left">
                <div class="footer-logo">
                    <img src={GameLayerLogo.src} alt="GameLayer - Gamification API platform for user engagement and customer loyalty" width="80" loading="lazy">
                </div>
                <div class="footer-info">
                    <p>Â© 2012 - 2025 All rights reserved</p>
                    <p>Company Registration 2503589-01 FINLAND</p>
                    <p><a href="mailto:contact@gamelayer.co?subject=GameLayer%3A%20General%20Enquiry" class="contact-link">Contact Us</a></p>
                </div>
            </div>
            <div class="footer-right">
                <ul class="footer-links">
                    {links.map((item) => (
                        <li><a href={item.link} target="_blank" rel="noopener noreferrer">{item.title}</a></li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</footer>


<style lang="scss">


footer{
    background-color: #fff;
    padding: 50px 0;
    
    .footer-content{
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }
    
    .footer-left{
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }
    
    .footer-logo{
        flex-shrink: 0;
        img{
            width: 80px;
            height: auto;
        }
    }
    
    .footer-info{
        display: flex;
        align-items: center;
        gap: 2rem;
        
        p{
            margin: 0;
            font-size: 1.0rem;
            line-height: 1.4;
            color: var(--as-black);
        }
    }
    
    .footer-right{
        .footer-links{
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: row;
            gap: 1.5rem;
            
            li{
                a{
                    font-size: 1.0rem;
                    color: var(--as-black);
                    text-decoration: none;
                    &:hover{
                        opacity: 0.8;
                        text-decoration: underline;
                    }
                }
            }
        }
    }
    
    .contact-link{
        color: var(--as-black);
        text-decoration: none;
        &:hover{
            opacity: 0.8;
            text-decoration: underline;
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 45px 0;
        .footer-info p{
            font-size: 0.95rem;
        }
        .footer-links li a{
            font-size: 0.95rem;
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 40px 0;
        .footer-content{
            flex-direction: column;
            gap: 1.5rem;
        }
        .footer-left{
            flex-direction: column;
            gap: 1rem;
        }
        .footer-info{
            flex-direction: column;
            gap: 0.5rem;
        }
        .footer-info p{
            font-size: 0.9rem;
        }
        .footer-links{
            flex-direction: column;
            gap: 0.5rem;
        }
        .footer-links li a{
            font-size: 0.9rem;
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 35px 0;
        .footer-info p{
            font-size: 0.85rem;
        }
        .footer-links li a{
            font-size: 0.85rem;
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 30px 0;
        .footer-content{
            text-align: center;
        }
        .footer-left{
            align-items: center;
        }
        .footer-info p{
            font-size: 0.8rem;
            line-height: 1.5;
        }
        .footer-links{
            align-items: center;
        }
        .footer-links li a{
            font-size: 0.8rem;
        }
    }


    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 25px 0;
        .footer-info p{
            font-size: 0.75rem;
        }
        .footer-links li a{
            font-size: 0.75rem;
        }
    }
}



</style>
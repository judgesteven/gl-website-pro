---
import utils from '../utils'
const links = [
    { title: 'Pricing',  link: utils.config.buy_url },
    { title: 'Contact us', link: `mailto:${utils.config.mailto}` },
    { title: 'Get the free version', link: utils.config.brew },

]
---

<footer>
    <div class="container">
        <div class="grid-half align-center">
            <div class="copyright">
                <p>Pro © {new Date().getFullYear()}. &nbsp;  Made with ♥︎ by  <a href={utils.config.ig} class="use-link" target="_blank">Codetonero</a></p>
            </div>
            <div class="links">
                <ul class="flex-center gap-3">
                    {links.map((item) => (
                        <li><a href={item.link} target="_blank">{item.title}</a></li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</footer>


<style lang="scss">


footer{
    background-color: #fff;
    padding: 50px 0;
    p{
        margin: 0px;
        font-size: 0.9rem;
        line-height: 1.4;
    }
    ul{
        list-style: none;
        padding: 0;
        margin: 0;
        justify-content: flex-start;
        li{
            a{
                font-size: 0.9rem;
                padding: 5px 0;
            }
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 45px 0;
        p{
            font-size: 0.85rem;
        }
        ul li a{
            font-size: 0.85rem;
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 40px 0;
        p{
            font-size: 0.8rem;
        }
        ul li a{
            font-size: 0.8rem;
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 35px 0;
        p{
            font-size: 0.75rem;
        }
        ul li a{
            font-size: 0.75rem;
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 30px 0;
        .grid-half{
            grid-template-columns: 1fr;
            text-align: center;
            gap: 1rem;
        }
        p{
            font-size: 0.7rem;
            line-height: 1.5;
        }
        .flex-center{
            flex-direction: column;
            gap: 8px;
            padding-top: 20px;
        }
        ul li a{
            font-size: 0.7rem;
            display: block;
            padding: 3px 0;
        }
    }

    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 25px 0;
        p{
            font-size: 0.65rem;
        }
        ul li a{
            font-size: 0.65rem;
        }
    }
}


a, .use-link{
    color: var(--as-black);
    text-decoration: none;
    &:hover{
        opacity: .8;
        text-decoration: underline;
    }
}

</style>
<style lang="scss">


footer{
    padding: 50px 0;
    
    .footer-content{
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }
    
    .footer-left{
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .footer-logo{
        flex-shrink: 0;
        img{
            width: 120px;
            height: auto;
        }
    }
    
    .company-registration{
        margin: 0;
        font-size: 1.5rem;
        line-height: 1.4;
        color: var(--as-black);
    }
    
    .footer-info{
        display: flex;
        align-items: center;
        gap: 2rem;
        
        p{
            margin: 0;
            font-size: 1.5rem;
            line-height: 1.4;
            color: var(--as-black);
        }
    }
    
    .footer-right{
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 1.5rem;
        
        .social-icons{
            display: flex;
            gap: 1.5rem;
            align-items: center;
            
            a{
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--as-black);
                transition: opacity 0.3s ease;
                
                svg{
                    width: 24px;
                    height: 24px;
                }
                
                &:hover{
                    opacity: 0.7;
                }
            }
        }
        
        .footer-links{
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: row;
            gap: 1.5rem;
            
            li{
                a{
                    font-size: 1.5rem;
                    color: var(--as-black);
                    text-decoration: none;
                    &:hover{
                        opacity: 0.8;
                        text-decoration: underline;
                    }
                }
            }
        }
    }
    
    .contact-link{
        color: var(--as-black);
        text-decoration: none;
        font-size: 1.5rem;
        &:hover{
            opacity: 0.8;
            text-decoration: underline;
        }
    }

    // Tablet landscape (1024px and below)
    @media (max-width: 1024px) {
        padding: 45px 0;
        .footer-logo img{
            width: 100px;
        }
        .company-registration{
            font-size: 1.4rem;
        }
        .footer-info p{
            font-size: 1.4rem;
        }
        .footer-links li a{
            font-size: 1.4rem;
        }
        .contact-link{
            font-size: 1.4rem;
        }
    }

    // Tablet portrait (768px and below)
    @media (max-width: 768px) {
        padding: 40px 0;
        .footer-content{
            flex-direction: column;
            gap: 1.5rem;
        }
        .footer-left{
            align-items: center;
            gap: 1rem;
        }
        .footer-logo img{
            width: 100px;
        }
        .company-registration{
            font-size: 1.1rem;
            text-align: center;
        }
        .footer-info{
            flex-direction: column;
            gap: 0.5rem;
        }
        .footer-info p{
            font-size: 1.35rem;
        }
        .footer-right{
            align-items: center;
        }
        .social-icons{
            gap: 1.25rem;
            a svg{
                width: 22px;
                height: 22px;
            }
        }
        .footer-links{
            flex-direction: column;
            gap: 0.5rem;
        }
        .footer-links li a{
            font-size: 1.35rem;
        }
        .contact-link{
            font-size: 1.35rem;
        }
    }

    // Mobile landscape (640px and below)
    @media (max-width: 640px) {
        padding: 35px 0;
        .footer-logo img{
            width: 90px;
        }
        .company-registration{
            font-size: 1.3rem;
        }
        .footer-info p{
            font-size: 1.3rem;
        }
        .footer-links li a{
            font-size: 1.3rem;
        }
        .contact-link{
            font-size: 1.3rem;
        }
    }

    // Mobile portrait (480px and below)
    @media (max-width: 480px) {
        padding: 30px 0;
        .footer-content{
            text-align: center;
        }
        .footer-left{
            align-items: center;
        }
        .footer-logo img{
            width: 90px;
        }
        .company-registration{
            font-size: 1.25rem;
        }
        .footer-info p{
            font-size: 1.25rem;
            line-height: 1.5;
        }
        .footer-right{
            align-items: center;
        }
        .social-icons{
            gap: 1rem;
            a svg{
                width: 20px;
                height: 20px;
            }
        }
        .footer-links{
            align-items: center;
        }
        .footer-links li a{
            font-size: 1.25rem;
        }
        .contact-link{
            font-size: 1.25rem;
        }
    }


    // Very small mobile (360px and below)
    @media (max-width: 360px) {
        padding: 25px 0;
        .footer-logo img{
            width: 80px;
        }
        .company-registration{
            font-size: 1.2rem;
        }
        .footer-info p{
            font-size: 1.2rem;
        }
        .social-icons{
            gap: 0.875rem;
            a svg{
                width: 18px;
                height: 18px;
            }
        }
        .footer-links li a{
            font-size: 1.2rem;
        }
        .contact-link{
            font-size: 1.2rem;
        }
    }
}



</style>